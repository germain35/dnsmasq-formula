dnsmasq:
  config:
    domain-needed: True
    bogus-priv: True
    expand-hosts: True
    bind-interfaces: True
    dhcp-authoritative: True
    no-hosts: True
    no-resolv: True
    enable-tftp: True
    tftp-root: /srv/pxe
    dhcp-boot: pxelinux.0
    cache-size: 256
    interface:
      - lo
      - eth0
    domain: domain.fr
    local: /domain.fr/
    listen-address:
      - 127.0.0.1
      - 192.168.1.254
    dhcp-range: 
      - eth0,192.168.1.20,192.168.1.99,12h
    dhcp-option:
      - 1,255.255.255.0
      - 3,192.168.1.1
    dhcp-host:
      - XX:XX:XX:XX:XX:XX,server01,192.168.1.1
    server:
      - 208.67.222.222
      - 208.67.220.220
  hosts:
    server01: 192.168.1.1
